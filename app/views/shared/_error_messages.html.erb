<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
       <%= pluralize(@user.errors.size, t("share.error_messages")) %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
