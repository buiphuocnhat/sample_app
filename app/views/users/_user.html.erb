<li>
  <%= gravatar_for user, size: Settings.avata_size_user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("users._user.delete"), user, method: :delete,
                                  data: { confirm: t("users._user.you_sure") } %>
  <% end %>
</li>
